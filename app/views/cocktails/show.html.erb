<%= link_to "Back", cocktails_path, class: 'btn btn-warning' %>

<h1><%= @cocktail.name %></h1>

 <ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"><%= dose.description %>-<%= dose.ingredient.name %>
    <%= link_to "Delete", dose_path(dose),method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>



<%= link_to "Add a new Dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
